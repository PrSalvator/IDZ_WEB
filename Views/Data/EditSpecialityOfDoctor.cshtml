@model  List<IDZ.Models.Entities.SPECIALITY>
@{
    ViewBag.Title = "EditSpecialityOfDoctor";
}
<h2>Специальности</h2>
<div class="col-md-12">
    @foreach (IDZ.Models.Entities.SPECIALITY speciality in Model)
    {
        <div class="col-md-12">
            <div class="col-md-4">
                @speciality.NAME
            </div>
            <div class="col-md-2">
                <a class="btn btn-default" href="@Url.Action("RemoveSpecialityOfDoctor", "Data", new { specialityId = speciality.ID })">
                    <i class="bi bi-trash"></i>
                </a>
            </div>
        </div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-md-12">
            <div class="col-md-4">
                @Html.DropDownList("specialityId", ViewBag.SelectList as SelectList, "Выберите специальность")
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-default">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z" />
                        <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5" />
                    </svg>
                </button>
            </div>
        </div>
    }
</div>

